{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "moduleResolution": "node",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "types": ["node", "vitest/globals"],
        "jsx": "react-jsx",
        "jsxImportSource": "preact"
    },
    "include": ["src/**/*", "src_debug_ui/**/*"],
    "exclude": ["node_modules", "dist", "public_debug_ui"]
}
